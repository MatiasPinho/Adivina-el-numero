---
import Footer from "../components/footer/Footer.astro";
import Header from "../components/header/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/smart_trading_favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  /* Fuentes */
  @import url("https://fonts.googleapis.com/css2?family=Aldrich&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  @font-face {
    font-family: "Horyzen";
    src: url("/fonts/horyzen-extra-bold.ttf");
  }

  /* Variables */
  :root {
    --primary: #6e06f2;
    --secondary: #5be9ba;
    --terciary: #141c3a;
    --disable: #a4a4a4;
    --transparent: rgba(20, 28, 58, 0.705);
    --background: #ffffff;
    --gradient-buttoms: linear-gradient(180deg, #6e06f2 0%, #9f47ff 100%);
    --box-shadow-buttoms: 0.705px 6.347px 9.52px 0px rgba(0, 0, 0, 0.25);
    --gradient-texts: linear-gradient(90deg, #5be9ba 50.07%, #6e06f2 87.55%);
    --footer-gradient: linear-gradient(
      90deg,
      rgba(20, 28, 58, 0.5) 0%,
      rgba(201, 132, 255, 0.5) 99.99%,
      rgba(114, 181, 211, 0.5) 100%
    );
    --background-texts-alternative: linear-gradient(
      90deg,
      #2a9d85 0%,
      #6e06f2 41.13%
    );
    --background-cards: linear-gradient(180deg, #303d5e 0%, #303d5e 100%);
    --backgrund-footer: linear-gradient(
      170deg,
      #303d5e -3.4%,
      #141c3a -3.39%,
      #303d5e 96.09%
    );
  }

  /* Reset */
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }

  /* Body */
  body {
    background-color: var(--background);
  }

  html {
    scroll-behavior: smooth;
  }

  /* Main */
  main {
    /* padding-top: 75px; */
    /* margin: 0 auto;
    width: 85%; */
  }

  /* @media (max-width: 350px) {
    main {
      width: 91%;
    }
  } */

  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-thumb {
    background-color: var(--primary);
    border-radius: 6px;
  }

  ::-webkit-scrollbar-track {
    background: var(--background);
  }

  /* Mozilla Scrollbar */
  ::-moz-scrollbar {
    width: 8px;
  }

  ::-moz-scrollbar-thumb {
    background: var(--primary);
    border-radius: 6px;
  }

  ::-moz-scrollbar-track {
    background: #f1f1f1;
  }

  /* Elements */
  .smartMobileIcon {
    width: 50px;
    height: 50px;
  }

  .smartDesktopIcon {
    display: none;
    width: 170px;
  }

  /* Headings */
  .title {
    font-family: "Horyzen";
    color: var(--terciary);
    font-size: 4rem;
    font-weight: 600;
    line-height: 1;
  }

  .title-secondary {
    font-family: "Horyzen";
    color: var(--terciary);
    font-size: 2.25rem;
  }

  .title-terciary {
    font-family: "Poppins";
    color: var(--terciary);
    font-size: 1.7rem;
  }

  .paragraph {
    font-family: "Poppins";
    color: var(--terciary);
    font-size: 1.125rem;
    line-height: 1.7;
  }

  .paragraph-alternative {
    font-family: "Poppins";
    color: var(--terciary);
    font-size: 1rem;
    line-height: 1.7;
  }

  .content-separator {
    padding: 40px 0;
  }

  .content-width {
    max-width: 75rem;
    padding: 0 16px;
    margin: 0 auto;
  }

  @media (max-width: 370px) {
    .title {
      font-size: 3.7rem;
    }
  }

  @media (min-width: 720px) {
    .content-separator {
      padding: 70px 0;
    }
  }

  @media (min-width: 1000px) {
    .title {
      font-size: 5rem;
    }

    .title-secondary {
      font-size: 3rem;
    }
  }

  /* Paragraphs */

  /* Lists */
  li {
    list-style: none;
  }

  /* Links */
  a {
    text-decoration: none;
    color: currentColor;
    font-family: "Poppins";
    font-size: 1rem;
  }

  nav a {
    font-family: "Aldrich";
  }

  label {
    font-family: "Poppins";
  }

  /* Strong */
  /* strong {
    font-weight: inherit;
    background-image: var(--gradient-texts);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  } */

  strong {
    font-weight: inherit;
    position: relative;
  }

  strong::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 20px;
    left: 0;
    bottom: 15%;
    z-index: -1;
    background-color: #5be9ba;
  }

  /* .alternative-strong {
    font-weight: inherit;
    background-image: var(--background-texts-alternative);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .terciary-strong {
    color: var(--primary);
    -webkit-text-fill-color: var(--primary);
  } */

  .emailIcon,
  .linkedInIcon,
  .phoneIcon {
    width: 40px;
    height: 40px;
  }

  .devIcon,
  .testIcon,
  .maximizeIcon {
    width: 60%;
  }

  @media (min-width: 1000px) {
    .smartDesktopIcon {
      display: block;
    }

    .smartMobileIcon {
      display: none;
    }
  }
</style>
