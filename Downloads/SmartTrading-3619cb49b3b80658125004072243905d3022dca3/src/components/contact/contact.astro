---
import ArrowIcon from "../../icons/Arrow.astro";
import Email from "../../icons/Email.astro";
import LinkedIn from "../../icons/LinkedIn.astro";
import Phone from "../../icons/Phone.astro";
import emailjs from "@emailjs/browser";
---

<astro:script> </astro:script>

<script></script>

<section class="contact" id="contact-id">
  <section class="contact__content content-width">
    <div class="contact__texts content-separator">
      <h4 class="contact__title title-secondary">
        ¿Agente de bolsa o agente de cambio?
      </h4>
      <ArrowIcon />
      <h5 class="contact__subtitle title-secondary">Contáctanos</h5>
    </div>
    <div class="contact__form">
      <!--  <figure class="decoration__contact">
        <img class="decoration__img" src="./picos4.png" alt="">
      </figure> -->
      <div class="contact__form__social">
        <h5 class="contact__sub-subheading title-secondary">
          Impulsemos juntos la transformación digital que <strong
            >tu equipo</strong
          > necesita.
        </h5>
        <ul class="contact__pils">
          <li class="contact__link">
            <a href=""> <LinkedIn /> </a>
            <p class="paragraph">Nick linkedin</p>
          </li>
          <li class="contact__link">
            <a href=""> <Email /> </a><p class="paragraph">
              SmartTrading@gmail.com
            </p>
          </li>
          <li class="contact__link">
            <a href="">
              <Phone />
            </a>
            <p class="paragraph">11-2345644</p>
          </li>
        </ul>
      </div>
      <form class="form" action="">
        <label class="contact__label" for="name"
          >Name <strong class="terciary-strong">*</strong></label
        >
        <input
          class="contact__input"
          type="text"
          placeholder="Tu nombre"
          id="name"
          autocomplete="username"
        />
        <label class="contact__label" for="email"
          >Email <strong class="terciary-strong">*</strong></label
        >
        <input
          class="contact__input"
          type="email"
          placeholder="Tu email"
          id="email"
          autocomplete="email"
        />
        <label class="contact__label" for="message"
          >Message <strong class="terciary-strong">*</strong></label
        >
        <textarea
          class="contact__textarea"
          name="message"
          id="message"
          placeholder="Tu mensaje"></textarea>
        <input
          class="contact__submit"
          type="submit"
          name="submit"
          value="Enviar"
        />
      </form>
    </div>
  </section>
</section>

<style>
